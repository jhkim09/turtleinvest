# TurtleInvest 환경설정

# 서버 설정
PORT=5000
NODE_ENV=development

# 데이터베이스
MONGODB_URI=mongodb://localhost:27017/turtleinvest

# 키움 OpenAPI 설정 (나중에 추가)
KIWOOM_APP_KEY=your_kiwoom_app_key_here
KIWOOM_SECRET_KEY=your_kiwoom_secret_key_here

# Make.com 알람 설정
MAKE_WEBHOOK_URL=https://hook.eu2.make.com/your_webhook_url_here

# 이메일 설정 (선택사항)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here

# 보안 키
JWT_SECRET=your_jwt_secret_key_here